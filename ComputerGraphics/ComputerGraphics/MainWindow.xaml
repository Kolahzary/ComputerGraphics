<Window x:Class="ComputerGraphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerGraphics"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
  <DockPanel>
    <Menu IsMainMenu='True'
          DockPanel.Dock='Top'>
      <MenuItem Header='_File'>
        <MenuItem Header="_New..."
                  Click='MenuItem_File_New_Click' />
        <Separator />
        <MenuItem Header="_Open..." />
        <Separator />
        <MenuItem Header="_Save" />
        <MenuItem Header="_Save As..." />
        <Separator />
        <MenuItem Header="_Exit"
                  Click='MenuItem_File_Exit_Click' />
      </MenuItem>
      <MenuItem Header='_Edit'></MenuItem>
      <MenuItem Header='_Help'>
        <MenuItem Header='_GitHub' Click='MenuItem_Help_GitHub_Click' />
        <Separator />
        <MenuItem Header='_About' />
      </MenuItem>
    </Menu>
    <Image Name='imgMain' />
  </DockPanel>
</Window>
